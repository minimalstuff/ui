{
	"hooks": {
		"before:init": ["pnpm run lint", "pnpm run build"]
	},
	"git": {
		"requireCleanWorkingDir": true,
		"commitMessage": "chore: release v${version}",
		"commit": true,
		"tag": true,
		"push": true
	},
	"github": {
		"release": true,
		"web": true
	},
	"npm": {
		"publish": false
	},
	"plugins": {
		"@release-it/conventional-changelog": {
			"infile": "CHANGELOG.md",
			"preset": {
				"name": "conventionalcommits"
			}
		}
	}
}
